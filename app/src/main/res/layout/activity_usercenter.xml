<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_center_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/home_title_color">

        <com.bjcathay.golf.view.TopView
            android:id="@+id/top_usercenter_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:padding="2dp"
            android:text="TeeTime"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_width="25dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:text="我的订单"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/order_go"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go"
                    android:layout_width="9dp"
                    android:layout_height="13dp" />
                <TextView
                    android:layout_toLeftOf="@id/order_go"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="5sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_competition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_width="25dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:text="我的赛事"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/go"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go"
                    android:layout_width="9dp"
                    android:layout_height="13dp" />
                <TextView
                    android:layout_toLeftOf="@id/go"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="5sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>


            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_width="25dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:text="我的兑换"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/exchange_go"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go"
                    android:layout_width="9dp"
                    android:layout_height="13dp" />
                <TextView
                    android:layout_toLeftOf="@id/exchange_go"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="5sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_message"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_width="25dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:text="我的消息"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/message_go"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go"
                    android:layout_width="9dp"
                    android:layout_height="13dp" />
                <TextView
                    android:layout_toLeftOf="@id/message_go"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="5sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>


            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_personal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_width="25dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:text="个人资料"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/single_go"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go"
                    android:layout_width="9dp"
                    android:layout_height="13dp" />
                <TextView
                    android:layout_toLeftOf="@id/single_go"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="5sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>


            <!--<View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray" />-->

        </RelativeLayout>


    </LinearLayout>


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="退出登录" />

</LinearLayout>