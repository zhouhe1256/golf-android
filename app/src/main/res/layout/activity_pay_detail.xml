<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.bjcathay.qt.view.TopView
                android:id="@+id/top_pay_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/touying_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dialog_order_sure_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/sub_textSize" />

                    <TextView
                        android:id="@+id/dialog_order_sure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/sub_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码:"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <TextView
                            android:id="@+id/dialog_order_sure_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sub_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_contains"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="包含服务:"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <TextView
                            android:id="@+id/dialog_order_sure_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sub_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消费人数:"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <TextView
                            android:id="@+id/dialog_order_sure_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sub_textSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="总金额:"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"

                                android:textColor="@color/order_price_color"
                                android:textSize="@dimen/sub_textSize" />

                            <TextView
                                android:id="@+id/dialog_order_sure_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/guolinbi_color"
                                android:textSize="@dimen/sub_textSize" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/touying_bg" />

            <LinearLayout
                android:id="@+id/use_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:onClick="onClick"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="使用钱包余额:"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sub_textSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/order_price_color"
                        android:textSize="@dimen/sub_textSize" />

                    <TextView
                        android:id="@+id/my_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/guolinbi_color"
                        android:textSize="@dimen/sub_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/show_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/tick"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/touying_bg" />
            <Button
                android:id="@+id/pay_sure"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@drawable/yellow_big_selector"
                android:textSize="@dimen/main_textSize"
                android:text="去支付"
                android:textStyle="bold"
                android:onClick="onClick"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/to_pay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="支付方式选择"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/city_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@color/white"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="实际支付:"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/city_title" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/order_price_color"
                                android:textSize="@dimen/city_title" />

                            <TextView
                                android:id="@+id/shouldpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/guolinbi_color"
                                android:textSize="@dimen/city_title"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/line_divide_hor" />

                <LinearLayout
                    android:id="@+id/pay_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wx_pay" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="20dp"
                                android:paddingLeft="25dp"
                                android:paddingTop="20dp"
                                android:text="微信支付"
                                android:textColor="@color/main_text_color"
                                android:textSize="@dimen/sub_textSize" />


                            <ImageView
                                android:id="@+id/weixin_icon"
                                android:layout_width="9dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_user_center_inter" />

                            <TextView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:layout_toLeftOf="@id/weixin_icon"
                                android:background="@drawable/ic_new_message"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="5sp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/line_divide_hor"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/pay_yinlian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="34dp"
                        android:src="@drawable/ic_yinlian" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:padding="20dp"
                                android:text="银联快捷支付"
                                android:textColor="@color/main_text_color"
                                android:textSize="@dimen/main_textSize" />


                            <ImageView
                                android:id="@+id/yinlian_icon"
                                android:layout_width="9dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_user_center_inter" />

                            <TextView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:layout_toLeftOf="@id/yinlian_icon"
                                android:background="@drawable/ic_new_message"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="5sp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/line_divide_hor" />

                <LinearLayout
                    android:id="@+id/pay_ipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_zhifubao" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="20dp"
                                android:paddingLeft="25dp"
                                android:paddingTop="20dp"
                                android:text="支付宝支付"
                                android:textColor="@color/main_text_color"
                                android:textSize="@dimen/sub_textSize" />


                            <ImageView
                                android:id="@+id/order_go"
                                android:layout_width="9dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_user_center_inter" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/touying_bg" />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>