<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/order_dialog_bg"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_order_sure_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mian_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/main_textSize"
                android:text="北京清河湾高尔夫俱乐部" />

            <TextView
                android:id="@+id/dialog_order_sure_time"
                android:textColor="@color/mian_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/main_textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.4.26  2:30" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textSize"
                    android:textColor="@color/exchange_text_color"
                    android:text="手机号码:" />

                <TextView
                    android:id="@+id/dialog_order_sure_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_textSize"
                    android:paddingLeft="5dp"
                    android:textColor="@color/mian_text_color"
                    android:text="1234567890" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textSize"
                    android:textColor="@color/exchange_text_color"
                    android:text="包含服务:" />

                <TextView
                    android:id="@+id/dialog_order_sure_service"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_textSize"
                    android:paddingLeft="5dp"
                    android:textColor="@color/mian_text_color"
                    android:text="18洞果岭/僮/车/柜" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="17dp"
                    android:textSize="@dimen/small_textSize"
                    android:textColor="@color/exchange_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费人数:" />
                <TextView
                    android:layout_marginTop="17dp"
                    android:id="@+id/dialog_order_sure_number"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/mian_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="４人" />
                <LinearLayout
                    android:id="@+id/dialog_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/dialog_order_minas"
                        android:paddingLeft="5dp"
                        android:paddingTop="17dp"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_plus" />
                    <TextView
                        android:layout_marginTop="17dp"
                        android:id="@+id/dialog_order_sure_number_edit"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center_horizontal"
                        android:minEms="2"
                        android:textColor="@color/mian_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5" />
                    <ImageView
                        android:paddingTop="17dp"
                        android:id="@+id/dialog_order_plus"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_minas" />
                    <TextView
                        android:layout_marginTop="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mian_text_color"
                        android:textSize="14sp"
                        android:text="人" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/exchange_text_color"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格:" />

                <TextView
                    android:id="@+id/dialog_order_sure_price"
android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/guolinbi_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥1480" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/sure_order"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/yellow_big_bg"
            android:textSize="@dimen/main_textSize"
            android:text="确认抢单" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="247dp"
                android:textSize="10sp"
                android:minLines="2"
                android:textColor="@color/exchange_text_color"
                android:text="@string/order_sure_instruction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="247dp"
                android:textSize="10sp"
                android:minLines="2"
                android:visibility="gone"
                android:textColor="@color/exchange_text_color"
                android:text="@string/order_cancale_instruction" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>