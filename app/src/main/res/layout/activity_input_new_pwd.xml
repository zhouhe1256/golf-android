<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:background="@drawable/login_dark_bg">
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/main_textSize"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="重置密码" />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <com.bjcathay.qt.view.ClearEditText
        android:id="@+id/edit_new_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="请输入新的密码"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_login_pwd"
        android:textCursorDrawable="@null"
        android:drawablePadding="20dp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:background="@android:color/transparent" />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <com.bjcathay.qt.view.ClearEditText
        android:id="@+id/edit_sure_new_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="重复输入一次"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_login_pwd"
        android:textCursorDrawable="@null"
        android:drawablePadding="20dp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:background="@android:color/transparent" />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/edit_sure_btn"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn_selector"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/main_textSize"
            android:textStyle="bold"
            android:onClick="onClick"
            android:clickable="true"
            android:text="完成" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/top_edit_pwd_layout"
            android:layout_height="85dp"
            android:layout_width="85dp"
            android:gravity="bottom"
            android:padding="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_back"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>