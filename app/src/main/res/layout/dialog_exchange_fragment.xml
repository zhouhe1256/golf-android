<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:background="@drawable/exchange_dialog_bg"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/dialog_exchange_note"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您将兑换一枚一级PGA赛事兑换卡,本次兑换将消耗10枚果岭币。"
            android:textSize="@dimen/small_textSize"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/mian_text_color" />

        <TextView
            android:id="@+id/dialog_exchange_sure"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_exchange_bg_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确认兑换" />

    </LinearLayout>
</LinearLayout>