<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:background="@drawable/message_delete_cirle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_exchange_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="您将兑换一枚一级PGA赛事兑换卡,本次兑换将消耗10枚果岭币。"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/main_textSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_exchange_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/right_btn_selector"
                    android:bottomRightRadius="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="@dimen/main_textSize"

                    android:textColor="@color/blue" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#DEDEDE" />

                <TextView
                    android:id="@+id/dialog_exchange_sure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/left_btn_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="确定"
                    android:textSize="@dimen/main_textSize"

                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>