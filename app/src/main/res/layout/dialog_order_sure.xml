<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.bjcathay.golf.view.TopView
        android:id="@+id/dialog_order_sure_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_order_sure_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京清河湾高尔夫俱乐部" />

            <TextView
                android:id="@+id/dialog_order_sure_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.4.26  2:30" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_order_sure_phone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:1234567890" />

            <TextView
                android:id="@+id/dialog_order_sure_service"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提供服务:18洞果岭/僮/车/柜" />

            <TextView
                android:id="@+id/dialog_order_sure_number"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费人数：４人" />

            <TextView
                android:id="@+id/dialog_order_sure_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:￥1480" />

        </LinearLayout>

        <Button
            android:id="@+id/sure_order"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/yellow"
            android:text="确认下单" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:textSize="10sp"
                android:minLines="2"
                android:text="@string/order_sure_instruction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:textSize="10sp"
                android:minLines="2"
                android:text="@string/order_cancale_instruction" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>