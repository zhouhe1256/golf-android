<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.bjcathay.qt.widget.WheelView
            android:id="@+id/wheel_year"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:longClickable="true" />

        <com.bjcathay.qt.widget.WheelView
            android:id="@+id/wheel_month"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:longClickable="true" />

        <com.bjcathay.qt.widget.WheelView
            android:id="@+id/wheel_date"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:longClickable="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/touying_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="打球人数"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/main_textSize" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/dialog_order_minas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/dialog_order_sure_number_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:minEms="2"
                    android:text="5"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/main_textSize" />

                <ImageView
                    android:id="@+id/dialog_order_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/ic_minas" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line_divide_hor" />

        <TextView
            android:id="@+id/amountNotice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="@string/this_way_to_get_glb" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/touying_bg" />


</LinearLayout>