<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/my_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:text="订单号:123456" />

        <TextView
            android:id="@+id/my_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认中"
            android:textSize="12sp"
            android:textColor="@color/guolinbi_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/my_order_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:background="@color/transparent_color" />

            <ImageView
                android:id="@+id/my_order_temai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_tag_temai" />

            <ImageView
                android:id="@+id/my_order_tuangou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_tag_tuangou" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_order_title"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/mian_text_color"
                android:text="北京清河湾俱乐部" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/my_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/exchange_text_color"
                android:text="日期：22323232" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/my_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/exchange_text_color"
                android:text="预约人数４" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/my_order_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/exchange_text_color"
                android:text="１８洞" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/my_order_price"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="￥:1460"
            android:textSize="14sp"
            android:textColor="@color/mian_text_color"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:gravity="center"
            android:layout_toLeftOf="@id/my_order_price"
            android:text="应付金额：" />


    </RelativeLayout>
</LinearLayout>
</FrameLayout>