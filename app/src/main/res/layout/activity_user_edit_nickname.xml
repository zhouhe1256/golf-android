<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color">
    <com.bjcathay.qt.view.TopView
        android:id="@+id/top_edit_name_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/home_title_color" />

    <EditText
        android:id="@+id/edit_nickname_edit_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#FCFCFC"
        android:text=""
        android:hint="昵称"
        android:textSize="@dimen/sub_textSize"
        android:textColorHint="@color/exchange_text_color"
        android:maxLength="10"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:textColor="#363636"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/touying_bg" />
    <TextView
        android:text="0/10"
        android:textColor="#7c8595"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:id="@+id/edit_nickname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/edit_sure"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/yellow_big_selector"
        android:textSize="@dimen/main_textSize"
        android:text="确认修改"
        android:textStyle="bold"
        android:onClick="onClick"/>

</LinearLayout>