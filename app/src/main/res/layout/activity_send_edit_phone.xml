<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bjcathay.qt.view.TopView
        android:id="@+id/top_edit_name_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/home_title_color" />

    <EditText
        android:id="@+id/edit_nickname_edit_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#FCFCFC"
        android:text=""
        android:inputType="number"
        android:maxLength="13"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#363636"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="0/10"
        android:textColor="#7c8595"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:id="@+id/edit_nickname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/edit_sure"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/yellow_big_bg"
        android:text="确认赠送"
        android:onClick="onClick"/>

</LinearLayout>