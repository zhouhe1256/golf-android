<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/my_message_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text=" " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你有一个订单待付款" />

        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:layout_gravity="right"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_message_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京清河湾乡村体育俱乐部" />

                <TextView
                    android:id="@+id/place_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18洞果/童/车/柜" />

                <TextView
                    android:id="@+id/place_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥:1660.00"
                    android:textColor="#d33f3f" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/my_message_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="点击可直接付款" />
    </LinearLayout>
</LinearLayout>