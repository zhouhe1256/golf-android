<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/message_delete_cirle"
        android:layout_width="280dp"
        android:layout_height="160dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/mian_text_color"
                android:textSize="@dimen/main_textSize"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:background="#DEDEDE"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:gravity="center"
                    android:text="取消"
                    android:clickable="true"
                    android:id="@+id/dialog_cancel"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_btn_selector"
                    android:bottomRightRadius="5dp"/>

                <View
                    android:layout_width="0.5dp"
                    android:background="#DEDEDE"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/dialog_confirm"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:clickable="true"
                    android:textColor="@color/home_title_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/left_btn_selector"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>