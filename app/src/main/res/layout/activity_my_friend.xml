<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color">
    <com.bjcathay.qt.view.TopView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_my_friend_layout"
        android:background="@color/home_title_color"/>

    <RelativeLayout
        android:id="@+id/my_friend_title"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/mian_text_color"
            android:text="时间"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/mian_text_color"
            android:text="手机号码"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:layout_marginRight="20dp"
            android:textColor="@color/mian_text_color"
            android:text="状态"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <com.bjcathay.qt.view.AutoListView
        android:id="@+id/my_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
       />
</LinearLayout>