<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/item_click"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:descendantFocusability="afterDescendants">

            <com.bjcathay.qt.view.RoundCornerImageView
                android:id="@+id/place_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@color/line_color"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--android:textColor="@color/mian_text_color"-->

                        <TextView
                            android:id="@+id/place_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/main_textSize"
                            android:textColor="#3C3C3C"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:text="北京清河湾乡村体育俱乐部" />


                        <ImageView
                            android:id="@+id/tuan_img"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:src="@drawable/ic_tu_icon" />


                        <ImageView
                            android:id="@+id/temai_img"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:src="@drawable/ic_te_icon" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/place_sale"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/sub_textSize"
                        android:textColor="@color/exchange_text_color"
                        android:text="18洞果/童/车/柜" />

                    <TextView
                        android:id="@+id/place_address"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/sub_textSize"
                        android:textColor="@color/exchange_text_color"
                        android:singleLine="true"
                        android:paddingRight="10dp"
                        android:ellipsize="end"
                        android:text="地址" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tuan_short"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/tuangou_color"
                    android:background="@drawable/tuangou_bg"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="还剩01天10小时22分"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/temai_short"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/order_price_color"
                    android:background="@drawable/temai_bg"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="￥"
                        android:textSize="10sp"
                        android:textColor="@color/order_price_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/place_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="1660"
                        android:textColor="@color/order_price_color" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <View
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="8dp" />

    </LinearLayout>
</RelativeLayout>