<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click"
            android:descendantFocusability="afterDescendants"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.bjcathay.qt.view.RoundCornerImageView
                    android:id="@+id/place_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@color/line_color"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/hot_flag"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/renqi"
                    android:visibility="visible" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/place_title"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="北京清河湾乡村体育俱乐部dsadsadsa"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/main_textSize" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fanxian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/blue"
                                android:text="返现"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sub_textSize" />

                            <TextView
                                android:id="@+id/temai_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@color/yellow"
                                android:text="特卖"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sub_textSize" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/place_sale"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="left|bottom"
                            android:text="18洞果/童/车/柜"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_note"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="bottom"
                                android:paddingBottom="3dp"
                                android:text="￥"
                                android:textColor="@color/order_price_color"
                                android:textSize="10sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/place_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="bottom"
                                android:paddingTop="3dp"
                                android:text="1660"
                                android:textColor="@color/order_price_color"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/place_rest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/price_note"
                                android:text="球场休息"
                                android:textColor="@color/order_price_color"
                                android:textSize="17sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/place_real"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/price_note"
                                android:text="实时计价"
                                android:textColor="@color/order_price_color"
                                android:textSize="17sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/place_address"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|left"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="地址"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />

                        <TextView
                            android:id="@+id/place_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="12km"
                            android:textColor="@color/exchange_text_color"
                            android:textSize="@dimen/sub_textSize" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tuan_short"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tuangou_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="还剩01天10小时22分"
                    android:textColor="@color/tuangou_color"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/temai_short"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/temai_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/order_price_color"
                    android:textSize="12dp"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/touying_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/transparent_color" />

    </LinearLayout>
</RelativeLayout>