<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/gray"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/tuan_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tag_tuangou"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/temai_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tag_temai"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:id="@+id/place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/mian_text_color"
                android:text="北京清河湾乡村体育俱乐部" />

            <TextView
                android:padding="5dp"
                android:id="@+id/place_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/exchange_text_color"
                android:text="18洞果/童/车/柜" />

            <TextView
                android:padding="5dp"
                android:id="@+id/place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/exchange_text_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="地址" />

            <TextView
                android:padding="3dp"
                android:id="@+id/place_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="￥1660.00"
                android:textColor="@color/order_price_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/tuan_short"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/order_price_color"
            android:textSize="11sp"
            android:padding="5dp"
            android:singleLine="true"
            android:gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/temai_short"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/order_price_color"
            android:textSize="11sp"
            android:padding="5dp"
            android:singleLine="true"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
</FrameLayout>