<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color">
    <com.bjcathay.qt.view.TopView
        android:id="@+id/top_edit_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/touying_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="姓名："
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/main_textSize" />

        <EditText
            android:id="@+id/edit_player_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:singleLine="true"
            android:hint=""
            android:textColor="@color/main_text_color"
            android:textColorHint="@color/exchange_text_color"
            android:textSize="@dimen/main_textSize" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_divide_hor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="电话："
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/main_textSize" />

        <EditText
            android:id="@+id/edit_player_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:hint=""
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/main_text_color"
            android:textColorHint="@color/exchange_text_color"
            android:textSize="@dimen/main_textSize" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/touying_bg" />
</LinearLayout>