<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bjcathay.qt.view.TopView
        android:id="@+id/top_my_information_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/home_title_color" />

    <RelativeLayout
        android:id="@+id/info_img_relative"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/mian_text_color"
            android:textSize="14sp"
            android:text="头像:" />


        <ImageView
            android:id="@+id/img_go"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_info_enter"
            android:layout_width="10dp"
            android:layout_height="17dp" />

        <com.bjcathay.qt.view.CircleImageView
            android:id="@+id/info_img"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_default_user"
            android:layout_toLeftOf="@id/img_go"
            android:layout_marginRight="20dp" />

    </RelativeLayout>


    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launcher" />-->

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />
    <RelativeLayout
        android:id="@+id/info_nick_name_relative"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:padding="10dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/info_nick_name_note"
            android:textColor="@color/mian_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="昵称:" />

        <TextView
            android:id="@+id/info_nick_name"
            android:layout_toRightOf="@id/info_nick_name_note"
            android:text="张三"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ImageView

            android:id="@+id/nick_name_go"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_info_enter"
            android:layout_width="10dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />
    <RelativeLayout
        android:id="@+id/info_name_relative"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:padding="10dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/info_name_note"
            android:textColor="@color/mian_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="真实姓名:" />

        <TextView
            android:id="@+id/info_name"
            android:layout_toRightOf="@id/info_name_note"
            android:text="张三"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ImageView

            android:id="@+id/name_go"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_info_enter"
            android:layout_width="10dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/mian_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号码:" />

        <TextView
            android:id="@+id/info_phone"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:padding="10dp">

        <TextView
            android:textColor="@color/mian_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="邀请码:" />

        <TextView
            android:id="@+id/info_invite"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/exchange_text_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="(邀请朋友时使用)" />


    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/touying_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="10sp"
        android:textColor="@color/exchange_text_color"
        android:text="完善个人资料，会更方便您后续的报名活动哦．" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确认修改" />-->


</LinearLayout>