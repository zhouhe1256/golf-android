<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_list_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_img"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_send_list" />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="13dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_minas" />

        <EditText
            android:id="@+id/input_player_name"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_img"
            android:layout_toRightOf="@id/left_img"
            android:background="@drawable/solid_write_bg"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:hint="请输入打球人姓名"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/main_text_color"
            android:textColorHint="@color/exchange_text_color"
            android:textSize="@dimen/main_textSize" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:text="填写真实姓名，更能保证您的顺利订场哦．"
        android:textColor="@color/exchange_text_color"
        android:textSize="@dimen/small_textSize" />

</LinearLayout>