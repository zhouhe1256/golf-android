<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_title_color">

    <ImageView
        android:padding="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher" />


    <com.bjcathay.golf.view.ClearEditText
        android:id="@+id/login_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号码"
        android:textCursorDrawable="@null"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@android:color/transparent" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#DDDDDD" />
    <com.bjcathay.golf.view.ClearEditText
        android:id="@+id/login_pwd"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="请输入密码"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:background="@android:color/transparent" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#DDDDDD" />
    <Button
        android:id="@+id/login_btn"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/login_color"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="登录" />

    <TextView
        android:id="@+id/new_login"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="新用户注册"
        android:gravity="center"
        android:background="@color/login_color"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forget_secrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/forget_secret"
        android:textColor="@color/white" />

    <com.bjcathay.golf.view.TopView
        android:id="@+id/top_login_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
</LinearLayout>