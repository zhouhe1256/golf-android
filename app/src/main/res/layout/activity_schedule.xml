<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bjcathay.golf.view.TopView
        android:id="@+id/top_schedule_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/home_title_color" />

    <ImageView
        android:id="@+id/place_img"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.bjcathay.golf.view.PickerView
            android:id="@+id/wheelView0"
            android:layout_width="150dp"
            android:layout_height="110dp">

        </com.bjcathay.golf.view.PickerView>

        <com.bjcathay.golf.view.PickerView
            android:id="@+id/wheelView1"
            android:layout_width="80dp"
            android:layout_height="110dp">

        </com.bjcathay.golf.view.PickerView>

        <com.bjcathay.golf.view.PickerView
            android:id="@+id/wheelView"
            android:layout_width="80dp"
            android:layout_height="110dp">

        </com.bjcathay.golf.view.PickerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="选择人数：" />

        <RadioGroup

            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1人"
                android:id="@+id/btn_0"
                android:textSize="12.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:button="@null"
                android:layout_margin="2dp"
                android:background="@drawable/radio" />

            <RadioButton
                android:layout_margin="2dp"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="２人"
                android:id="@+id/btn_1"
                android:textSize="12.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio" />

            <RadioButton
                android:layout_margin="2dp"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="３人"
                android:id="@+id/btn_2"
                android:textSize="12.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio" />

            <RadioButton
                android:layout_margin="2dp"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="４人"
                android:id="@+id/btn_3"
                android:textSize="12.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio" />

            <RadioButton
                android:layout_margin="2dp"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="４人+"
                android:id="@+id/btn_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包含服务：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18洞果岭/僮/车/柜" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地址：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市海淀区清河湾" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="１４８０" />


    </LinearLayout>

    <Button
        android:id="@+id/ok"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="18dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/yellow"
        android:text="提交订单" />
</LinearLayout>