<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_color">

    <com.bjcathay.qt.view.TopView
        android:id="@+id/top_golf_detail_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/home_title_color" />

    <com.bjcathay.qt.view.CustomScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <RelativeLayout

                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

                <com.bjcathay.qt.view.JazzyViewPager
                    android:id="@+id/jazzy_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/doto_main_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:layout_alignBottom="@id/jazzy_viewpager"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/mian_text_color"
                    android:text="球场简介" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/golfcourse_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/exchange_text_color"
                    android:textSize="@dimen/middle_textSize"
                    android:background="@color/white" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/touying_bg" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/mian_text_color"
                    android:text="球场参数" />

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:text="球场类型:" />

                    <TextView
                        android:layout_marginLeft="5dp"

                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:id="@+id/golfcourse_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球场长度:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:id="@+id/golfcourse_length"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球场数据:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:id="@+id/golfcourse_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球场面积:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/golfcourse_area"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:background="@color/white"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建立时间:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:id="@+id/golfcourse_date"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="果岭草种:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:id="@+id/golfcourse_greenGrass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球场草种:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"

                        android:id="@+id/golfcourse_fairwayGrass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/line_divide_hor" />

                <LinearLayout
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/mian_text_color"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/main_textSize"

                        android:layout_height="wrap_content"
                        android:text="球场电话:" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/golfcourse_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/middle_textSize"

                        android:textColor="@color/home_title_color" />
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/line_divide_hor" />

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/golfcourse_address_note"
                        android:textStyle="bold"
                        android:textColor="@color/mian_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_textSize"
                        android:text="球场地址:" />

                    <TextView
                        android:textColor="@color/exchange_text_color"
                        android:textSize="@dimen/middle_textSize"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/golfcourse_address_note"
                        android:id="@+id/golfcourse_address"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/golfcourse_map"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_address" />
                </RelativeLayout>

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/line_divide_hor" />

            </LinearLayout>

        </LinearLayout>

    </com.bjcathay.qt.view.CustomScrollView>
</LinearLayout>